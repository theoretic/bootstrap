.sidebar{
	.col{
		padding:0px;
		//-webkit-filter: grayscale(1); 
		.grayscale(1);
		.opacity(.7);
		.transition();
		:hover{
			.opacity(1);
			.grayscale(0);
			//-webkit-filter: grayscale(0); 
			filter: grayscale(0); 
			}
		
		h3{
			padding:8px 0;
			}
		img{
			width:100%;
			margin-bottom:10px;
			}
		}
	}

@media(max-width:767px){
	.sidebar{
		.col{
			width:33%;
			padding:0 20px 0 0;
			//outline:2px solid #ccc !important;
			}
		}
	}